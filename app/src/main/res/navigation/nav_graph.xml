<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signin">
    <fragment
        android:id="@+id/signin"
        android:name="com.example.quickcash.ui.startpage.LoginFragment"
        android:label="signin"
        tools:layout="@layout/signin" >
        <action
            android:id="@+id/action_signIn_to_registration"
            app:destination="@id/registration" />
    </fragment>
    <fragment
        android:id="@+id/registration"
        android:name="com.example.quickcash.ui.startpage.SignUpFragment"
        android:label="registration"
        tools:layout="@layout/registration"
        >
        <action
            android:id="@+id/action_registration_to_signIn"
            app:destination="@id/signin" />
    </fragment>
</navigation>