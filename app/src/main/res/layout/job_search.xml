* Job Search page giving a list of jobs available

-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/job_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.activities.SearchJob">

    <TextView
        android:id="@+id/jobSearchjobTitle"
        android:layout_width="182dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:text="Search for a job"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobAppNameLabel" />

    <TextView
        android:id="@+id/jobAddLocationLabel2"
        android:layout_width="217dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:forceDarkAllowed="true"
        android:text="Location:"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/jobSearchBar"
        app:layout_constraintTop_toBottomOf="@+id/jobSearchBar" />

    <TextView
        android:id="@+id/jobTitleLabel"
        android:layout_width="217dp"
        android:layout_height="23dp"
        android:layout_marginTop="32dp"
        android:forceDarkAllowed="true"
        android:text="Job Title:"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/jobSearchjobTitle"
        app:layout_constraintTop_toBottomOf="@+id/jobSearchjobTitle" />

    <ImageView
        android:id="@+id/jobIconImage"
        android:layout_width="178dp"
        android:layout_height="148dp"
        android:layout_marginTop="40dp"
        android:contentDescription="logo"
        android:src="@drawable/money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jobAppNameLabel"
        android:layout_width="255dp"
        android:layout_height="24dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="200dp"
        android:forceDarkAllowed="true"
        android:text="Quick Cash"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SearchJobButton"
        android:layout_width="138dp"
        android:layout_height="49dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/custom_button"
        android:text="Search Job"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobSearchLocationSpinner" />

    <SearchView
        android:id="@+id/jobSearchBar"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#ffff"
        android:iconifiedByDefault="false"
        android:inputType="textPersonName"
        android:queryHint="Search jobs"
        android:textColor="#f000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobTitleLabel" />

    <Spinner
        android:id="@+id/jobSearchLocationSpinner"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#ffff"
        android:entries="@array/locations"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobAddLocationLabel2" />

    <ImageView
        android:id="@+id/jobbackMain"
        android:layout_width="38dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

</androidx.constraintlayout.widget.ConstraintLayout>

