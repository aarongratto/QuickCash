<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/job_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.activities.MainPage">


    <ImageView
        android:id="@+id/jobIconImage"
        android:layout_width="185dp"
        android:layout_height="200dp"
        android:layout_marginTop="64dp"
        android:contentDescription="logo"
        android:src="@drawable/money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jobAppNameLabel"
        android:layout_width="257dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:forceDarkAllowed="true"
        android:text="Quick Cash"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobIconImage" />

    <Button
        android:id="@+id/jobCreateJobButton"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/custom_button"
        android:text="Create Job"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobAppNameLabel" />

    <Button
        android:id="@+id/SearchJobButton"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button2"
        android:text="Search Job"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobCreateJobButton" />

</androidx.constraintlayout.widget.ConstraintLayout>

